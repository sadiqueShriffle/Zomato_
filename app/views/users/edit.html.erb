<body>
	<div class="container">
		<h1>Profile</h1>
		<%= form_with model: @user, method: :post do |form| %>
				<label for="name">Name</label>
				<%= form.text_field :name ,id: "name"%><br><br>
				<label for="email">Email</label>
				<%= form.text_field :email, id: "email" %><br><br>
				<label for="image">Image</label>
				<%= form.file_field :image, id: "image" %><br><br>
				<%= form.submit "update profile"%><br>
		<% end %>
	</div>
</body>




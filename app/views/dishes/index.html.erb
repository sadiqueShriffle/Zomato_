<p style="color: green"><%= notice %></p>

<h1>Dishes</h1>

<div id="dishes">
  <% @dishes.each do |dish| %>
    <%= render dish %>
      <%if dish.image.attached?%>
      no_images_available
        <%  dish.image.url %> 
      <%else%>
      'no_images_available.jpg'
      <%end%>
    <p>
      <%= link_to "Show this dish", dish %>
    </p>
  <% end %>
</div>

<% if current_user.type == 'Owner'%>
<%= link_to "New dish", new_dish_path(category_id: @dishes.first.category_id)%>
<% end%>



